@model ST.App.Features.Errors.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Bir Hata Oluştu";
    Layout = "_Root";
}

<style>
    body {
        background-image: url('/themes/metronic/assets/media/auth/bg7.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    [data-bs-theme="dark"] body {
        background-image: url('/themes/metronic/assets/media/auth/bg7-dark.jpg');
    }
</style>

<div class="d-flex flex-column flex-center flex-column-fluid">
    <div class="d-flex flex-column flex-center text-center p-10">
        <div class="card card-flush w-lg-650px py-5 shadow-sm">
            <div class="card-body py-15 py-lg-20">
                <!-- Title -->
                <h1 class="fw-bolder fs-2qx text-gray-900 mb-4">Sistem Hatası</h1>

                <!-- Message -->
                <div class="fw-semibold fs-6 text-gray-600 mb-7">
                    Sistemde beklenmedik bir hata oluştu. Endişelenmeyin, ekibimiz incelemektedir. <br />
                    Hata detayını destek ekibine iletmek için <strong>RequestId:</strong> @Model.RequestId
                    <br />
                    (<a href="https://www.youtube.com/watch?v=P9mLUhDnCk4" target="_blank">Farklı bir yaklaşım için
                        inceleyiniz</a>)
                </div>

                <!-- Illustration -->
                <div class="mb-11">
                    <img src="~/themes/metronic/assets/media/auth/500-error.png"
                        class="mw-100 mh-300px theme-light-show" alt="500 Error" />
                    <img src="~/themes/metronic/assets/media/auth/500-error-dark.png"
                        class="mw-100 mh-300px theme-dark-show" alt="500 Error Dark" />
                </div>

                <!-- Action Buttons -->
                <div class="mb-0 d-flex flex-column flex-sm-row justify-content-center gap-3">
                    <a href="javascript:history.back()" class="btn btn-sm btn-primary">
                        <i class="ki-outline ki-arrow-left fs-2"></i>
                        Geri Dön
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-secondary">
                        <i class="ki-outline ki-home fs-2"></i>
                        Anasayfaya Git
                    </a>
                </div>

                <!-- Auto redirect info -->
                <div class="mt-3 text-muted fs-7">
                    Sayfa otomatik olarak <strong>10 saniye</strong> içinde anasayfaya yönlendirilecektir.
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Auto redirect after 10 seconds
    setTimeout(function () {
        window.location.href = '@Url.Action("Index", "Home")';
    }, 10000);
</script>